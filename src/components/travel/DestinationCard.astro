---
import TierBadge from './TierBadge.astro';

interface Props {
  destination: string;
  slug: string;
  compositeScore: number;
  tier: number;
  modelsCount: number;
  description: string;
  rank: number;
  href: string;
}

const { destination, slug, compositeScore, tier, modelsCount, description, rank, href } = Astro.props;
---
<a href={href} class="destination-card">
  <div class="card-rank">#{rank}</div>
  <div class="card-body">
    <div class="card-header">
      <h3 class="card-title">{destination}</h3>
      <div class="card-score">{compositeScore.toFixed(1)}</div>
    </div>
    <div class="card-meta">
      <TierBadge tier={tier} />
      <span class="card-models">{modelsCount} models</span>
    </div>
    <p class="card-description">{description}</p>
  </div>
  <div class="card-arrow" aria-hidden="true">&rarr;</div>
</a>

<style>
  .destination-card {
    display: flex;
    align-items: stretch;
    gap: 0;
    background: var(--r-bg-surface, #161b22);
    border: 1px solid var(--r-border-subtle, rgba(90, 125, 138, 0.2));
    border-radius: 4px;
    text-decoration: none;
    color: inherit;
    transition: border-color 0.2s ease, background 0.2s ease;
    overflow: hidden;
  }

  .destination-card:hover {
    border-color: var(--r-accent-warm, #c4956a);
    background: var(--r-bg-card, #1c2333);
  }

  .card-rank {
    display: flex;
    align-items: center;
    justify-content: center;
    min-width: 3.5rem;
    font-family: var(--r-font-mono, var(--font-mono));
    font-size: var(--r-text-h2, 1.5rem);
    font-weight: 700;
    color: var(--r-text-secondary, #9b978f);
    background: rgba(0, 0, 0, 0.15);
    border-right: 1px solid var(--r-border-subtle, rgba(90, 125, 138, 0.2));
  }

  .card-body {
    flex: 1;
    padding: var(--r-space-sm, 1rem);
    min-width: 0;
  }

  .card-header {
    display: flex;
    justify-content: space-between;
    align-items: baseline;
    gap: var(--r-space-sm, 1rem);
    margin-bottom: var(--r-space-xs, 0.5rem);
  }

  .card-title {
    font-family: var(--r-font-heading, Georgia, serif);
    font-size: var(--r-text-h3, 1.3rem);
    font-weight: 600;
    color: var(--r-text-heading, #f0ece4);
    margin: 0;
    text-transform: none;
    letter-spacing: normal;
    line-height: 1.3;
  }

  .card-score {
    font-family: var(--r-font-mono, var(--font-mono));
    font-size: var(--r-text-h2, 1.5rem);
    font-weight: 700;
    color: var(--r-accent-warm, #c4956a);
    flex-shrink: 0;
  }

  .card-meta {
    display: flex;
    align-items: center;
    gap: var(--r-space-sm, 1rem);
    margin-bottom: var(--r-space-xs, 0.5rem);
  }

  .card-models {
    font-family: var(--r-font-mono, var(--font-mono));
    font-size: var(--r-text-caption, 0.75rem);
    color: var(--r-text-secondary, #9b978f);
    text-transform: uppercase;
    letter-spacing: 0.08em;
  }

  .card-description {
    font-size: var(--r-text-small, 0.875rem);
    color: var(--r-text-secondary, #9b978f);
    line-height: 1.5;
    margin: 0;
  }

  .card-arrow {
    display: flex;
    align-items: center;
    padding: 0 var(--r-space-sm, 1rem);
    font-size: 1.25rem;
    color: var(--r-text-secondary, #9b978f);
    transition: color 0.2s ease, transform 0.2s ease;
  }

  .destination-card:hover .card-arrow {
    color: var(--r-accent-warm, #c4956a);
    transform: translateX(3px);
  }

  @media (max-width: 480px) {
    .card-rank {
      min-width: 2.5rem;
      font-size: 1.2rem;
    }

    .card-header {
      flex-direction: column;
      gap: 0.25rem;
    }

    .card-arrow {
      display: none;
    }
  }
</style>
