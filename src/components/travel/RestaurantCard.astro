---
interface Props {
  name: string;
  cuisine: string;
  price: string;
  take: string;
}

const { name, cuisine, price, take } = Astro.props;
---
<article class="restaurant-card">
  <h3 class="restaurant-name">{name}</h3>
  <p class="restaurant-meta">{cuisine} Â· {price}</p>
  <p class="restaurant-take">{take}</p>
</article>

<style>
  .restaurant-card {
    background: var(--j-bg-card);
    border: 1px solid var(--j-accent-slate);
    border-radius: 4px;
    padding: var(--j-space-sm);
  }

  .restaurant-name {
    font-family: var(--j-font-heading);
    font-size: var(--j-text-card);
    font-weight: 600;
    color: var(--j-text-primary);
    margin: 0 0 var(--j-space-xs);
    text-transform: none;
    letter-spacing: normal;
    line-height: 1.3;
  }

  .restaurant-meta {
    font-family: var(--j-font-mono);
    font-size: var(--j-text-caption);
    color: var(--j-accent-gold);
    margin: 0 0 var(--j-space-xs);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .restaurant-take {
    font-size: var(--j-text-card);
    color: var(--j-text-secondary);
    margin: 0;
    line-height: 1.5;
  }
</style>
