<header class="header">
  <div class="container">
    <a href="/" class="logo">
      <span class="logo-text">gnarly</span><span class="logo-dot">bob</span>
    </a>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: var(--space-sm) 0;
    background: rgba(3, 7, 18, 0.8);
    backdrop-filter: blur(8px);
    border-bottom: 1px solid var(--glass-border);
  }

  .container {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    font-family: var(--font-mono);
    font-size: 1.25rem;
    font-weight: 700;
    letter-spacing: 0.05em;
  }

  .logo-text {
    color: var(--color-text-main);
  }

  .logo-dot {
    color: var(--color-accent);
  }
</style>
