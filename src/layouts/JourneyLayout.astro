---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import RouteMap from '../components/travel/RouteMap.astro';
import '../styles/journey.css';

interface Props {
  title: string;
  description: string;
  ogImage?: string;
}

const { title, description, ogImage } = Astro.props;
---
<BaseLayout title={title} description={description}>
  <link slot="head" rel="preload" href="/fonts/fraunces-latin-variable.woff2" as="font" type="font/woff2" crossorigin />
  <Header />
  <div class="journey">
    <RouteMap />
    <main class="journey-content">
      <slot />
    </main>
  </div>
  <Footer />
</BaseLayout>
