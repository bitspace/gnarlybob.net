---
import BaseLayout from './BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	date: Date;
	description?: string;
}

const { title, date, description } = Astro.props;

const formattedDate = date.toLocaleDateString('en-US', {
	year: 'numeric',
	month: 'long',
	day: 'numeric',
});
---

<BaseLayout title={`${title} â€” gnarlybob`} description={description}>
	<Header />
	<main class="post-page">
		<div class="container">
			<article class="post">
				<header class="post-header">
					<a href="/writing/" class="back-link hud-text">&larr; Back to Writing</a>
					<time class="post-date hud-text" datetime={date.toISOString()}>
						// {formattedDate}
					</time>
					<h1 class="post-title">{title}</h1>
					{description && <p class="post-description">{description}</p>}
				</header>
				<div class="prose">
					<slot />
				</div>
			</article>
		</div>
	</main>
	<Footer />
</BaseLayout>

<style>
	.post-page {
		padding-top: calc(var(--space-xl) + 60px);
		padding-bottom: var(--space-xl);
		min-height: 100vh;
	}

	.post {
		max-width: 720px;
		margin: 0 auto;
	}

	.back-link {
		display: inline-block;
		margin-bottom: var(--space-md);
		font-size: 0.8rem;
		transition: color 0.2s ease;
	}

	.back-link:hover {
		color: var(--color-primary);
	}

	.post-header {
		margin-bottom: var(--space-lg);
		border-bottom: 1px solid var(--glass-border);
		padding-bottom: var(--space-md);
	}

	.post-date {
		display: block;
		margin-bottom: var(--space-sm);
	}

	.post-title {
		font-size: 2.5rem;
		text-transform: none;
		letter-spacing: normal;
		line-height: 1.2;
		margin-bottom: var(--space-sm);
	}

	.post-description {
		color: var(--color-text-muted);
		font-size: 1.125rem;
		line-height: 1.6;
		margin: 0;
	}

	/* Prose typography for rendered markdown */
	.prose {
		line-height: 1.8;
		color: var(--color-text-muted);
		font-size: 1.0625rem;
	}

	.prose :global(h2) {
		font-size: 1.5rem;
		color: var(--color-text-main);
		margin-top: var(--space-lg);
		margin-bottom: var(--space-sm);
		text-transform: none;
		letter-spacing: normal;
	}

	.prose :global(h3) {
		font-size: 1.25rem;
		color: var(--color-text-main);
		margin-top: var(--space-md);
		margin-bottom: var(--space-xs);
		text-transform: none;
		letter-spacing: normal;
	}

	.prose :global(p) {
		margin-bottom: var(--space-sm);
	}

	.prose :global(a) {
		color: var(--color-accent);
		text-decoration: underline;
		text-decoration-color: rgba(6, 182, 212, 0.4);
		text-underline-offset: 2px;
		transition: text-decoration-color 0.2s ease;
	}

	.prose :global(a:hover) {
		text-decoration-color: var(--color-accent);
	}

	.prose :global(strong) {
		color: var(--color-text-main);
		font-weight: 600;
	}

	.prose :global(code) {
		font-family: var(--font-mono);
		font-size: 0.875em;
		background: var(--color-panel);
		border: 1px solid var(--color-border);
		padding: 0.15em 0.4em;
		border-radius: var(--radius-sm);
		color: var(--color-accent);
	}

	.prose :global(pre) {
		background: var(--color-panel);
		border: 1px solid var(--color-border);
		border-radius: var(--radius-md);
		padding: var(--space-sm);
		overflow-x: auto;
		margin-bottom: var(--space-sm);
	}

	.prose :global(pre code) {
		background: none;
		border: none;
		padding: 0;
		font-size: 0.875rem;
		color: var(--color-text-main);
	}

	.prose :global(blockquote) {
		border-left: 3px solid var(--color-primary);
		margin: var(--space-sm) 0;
		padding: var(--space-xs) var(--space-sm);
		background: rgba(15, 23, 42, 0.4);
		border-radius: 0 var(--radius-sm) var(--radius-sm) 0;
	}

	.prose :global(blockquote p) {
		margin-bottom: 0;
		font-style: italic;
		color: var(--color-text-muted);
	}

	.prose :global(ul),
	.prose :global(ol) {
		margin-bottom: var(--space-sm);
		padding-left: var(--space-md);
	}

	.prose :global(li) {
		margin-bottom: var(--space-xs);
	}

	.prose :global(hr) {
		border: none;
		border-top: 1px solid var(--glass-border);
		margin: var(--space-md) 0;
	}

	.prose :global(img) {
		max-width: 100%;
		height: auto;
		border-radius: var(--radius-md);
		border: 1px solid var(--color-border);
	}

	@media (max-width: 768px) {
		.post-title {
			font-size: 2rem;
		}
	}

	@media (max-width: 480px) {
		.post-title {
			font-size: 1.75rem;
		}
	}
</style>
