---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
---
<BaseLayout title="Travel — gnarlybob" description="Road trips, waterfalls, and places worth the drive.">
  <Header />
  <main class="travel-index">
    <div class="container">
      <h1>Travel</h1>
      <ul class="trip-list">
        <li>
          <a href="/travel/summer-2026/" class="trip-link">
            <span class="trip-title">Summer 2026 — Destination Research</span>
            <span class="trip-meta">6 destinations · AI panel</span>
          </a>
        </li>
        <li>
          <a href="/travel/ithaca/" class="trip-link">
            <span class="trip-title">Ithaca & the Finger Lakes</span>
            <span class="trip-meta">The journey</span>
          </a>
        </li>
      </ul>
    </div>
  </main>
  <Footer />
</BaseLayout>

<style>
  .travel-index {
    padding-top: calc(var(--space-xl) + 60px);
    min-height: 100vh;
  }

  h1 {
    font-family: var(--font-mono);
    color: var(--color-accent);
    margin-bottom: var(--space-lg);
  }

  .trip-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .trip-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: var(--space-sm) 0;
    border-bottom: 1px solid var(--color-border);
    transition: color 0.2s ease;
  }

  .trip-link:hover {
    color: var(--color-primary);
  }

  .trip-title {
    font-size: 1.2rem;
  }

  .trip-meta {
    font-family: var(--font-mono);
    font-size: 0.8rem;
    color: var(--color-text-muted);
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
</style>
