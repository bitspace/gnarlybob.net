---
import Layout from "../layouts/Layout.astro";
const baseUrl = import.meta.env.BASE_URL;
---

<Layout title="Travel Pitch Decks">
  <main>
    <section class="hero">
      <h1>Summer 2026</h1>
      <p>Travel Pitch Decks & Logistics</p>
    </section>

    <section class="pitch-decks">
      <div class="deck-grid">
        <a
          href={`${baseUrl}/pitch-decks/algonquin`}
          class="deck-card glass-panel algonquin"
        >
          <div class="deck-accent"></div>
          <h3>Algonquin PP</h3>
          <p>Ontario’s “Big Forest” & Lake Country</p>
          <span class="view-deck">View Proposal &rarr;</span>
        </a>
        <a
          href={`${baseUrl}/pitch-decks/saguenay`}
          class="deck-card glass-panel saguenay"
        >
          <div class="deck-accent"></div>
          <h3>Saguenay / Lac-St-Jean</h3>
          <p>Fjord Cliffs & Beach-Scale Lake Views</p>
          <span class="view-deck">View Proposal &rarr;</span>
        </a>
        <a
          href={`${baseUrl}/pitch-decks/riviere-du-loup`}
          class="deck-card glass-panel rdl"
        >
          <div class="deck-accent"></div>
          <h3>Rivière-du-Loup</h3>
          <p>St. Lawrence Air & Waterfall Parks</p>
          <span class="view-deck">View Proposal &rarr;</span>
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 4rem 2rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 6rem;
    animation: fadeIn 1s ease-out;
  }

  h1 {
    font-size: clamp(3rem, 10vw, 8rem);
    line-height: 1;
    margin-bottom: 1rem;
    background: linear-gradient(
      to bottom,
      var(--color-primary),
      var(--color-secondary)
    );
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .hero p {
    font-size: 1.5rem;
    opacity: 0.8;
    letter-spacing: 4px;
    text-transform: uppercase;
  }

  .deck-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .deck-card {
    padding: 3rem;
    text-align: center;
    transition: var(--transition-smooth);
    display: flex;
    flex-direction: column;
    justify-content: center;
    min-height: 300px;
  }

  .deck-card:hover {
    transform: translateY(-10px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.5);
    border-color: var(--color-primary);
  }

  .deck-card h3 {
    margin-bottom: 0.5rem;
    font-size: 1.5rem;
  }

  .deck-card p {
    font-size: 1rem;
    opacity: 0.7;
    margin-bottom: 2rem;
  }

  .deck-accent {
    width: 40px;
    height: 4px;
    margin: 0 auto 1.5rem;
    border-radius: 2px;
    background: var(--color-primary);
  }

  .algonquin .deck-accent {
    background: hsl(150 80% 45%);
  }
  .saguenay .deck-accent {
    background: hsl(205 85% 52%);
  }
  .rdl .deck-accent {
    background: hsl(28 90% 55%);
  }

  .view-deck {
    font-size: 0.9rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 1px;
    color: var(--color-secondary);
    opacity: 0;
    transform: translateY(10px);
    transition: var(--transition-smooth);
  }

  .deck-card:hover .view-deck {
    opacity: 1;
    transform: translateY(0);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
