---
import Layout from "../layouts/Layout.astro";
const baseUrl = import.meta.env.BASE_URL;
---

<Layout title="Travel Proposals">
  <main>
    <section class="hero">
      <div class="kicker">Summer 2026</div>
      <h1>Travel Pitch Decks</h1>
      <p>Logistics, Pacing, and Destination Candidate Reviews</p>
    </section>

    <section class="pitch-decks">
      <div class="deck-grid">
        <a
          href={`${baseUrl}/pitch-decks/algonquin`}
          class="deck-card glass-panel algonquin"
        >
          <div class="deck-accent"></div>
          <h3>Algonquin PP</h3>
          <p>Ontario’s "Big Forest" & lake country experience.</p>
          <span class="view-deck">View Deck &rarr;</span>
        </a>
        <a
          href={`${baseUrl}/pitch-decks/saguenay`}
          class="deck-card glass-panel saguenay"
        >
          <div class="deck-accent"></div>
          <h3>Saguenay</h3>
          <p>Dramtic fjord cliffs and beach-scale lake vistas.</p>
          <span class="view-deck">View Deck &rarr;</span>
        </a>
        <a
          href={`${baseUrl}/pitch-decks/riviere-du-loup`}
          class="deck-card glass-panel rdl"
        >
          <div class="deck-accent"></div>
          <h3>Rivière-du-Loup</h3>
          <p>St. Lawrence air and urban waterfall parks.</p>
          <span class="view-deck">View Deck &rarr;</span>
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  main {
    max-width: 1400px;
    margin: 0 auto;
    padding: 6rem 2rem;
  }

  .hero {
    text-align: center;
    margin-bottom: 8rem;
    animation: fadeIn 1s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .kicker {
    color: var(--color-primary);
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.2em;
    font-size: 0.9rem;
    margin-bottom: 1rem;
  }

  h1 {
    font-size: clamp(3rem, 8vw, 6rem);
    line-height: 0.95;
    margin-bottom: 1.5rem;
    font-weight: 800;
    color: var(--color-text);
  }

  .hero p {
    font-size: 1.25rem;
    color: var(--color-text-dim);
    max-width: 600px;
    margin: 0 auto;
  }

  .deck-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2.5rem;
    justify-content: center;
  }

  .deck-card {
    padding: 4rem 2rem;
    text-align: center;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    min-height: 400px;
  }

  .deck-card:hover {
    transform: translateY(-12px);
    border-color: var(--color-primary);
  }

  .deck-card h3 {
    margin-bottom: 1rem;
    font-size: 1.75rem;
    color: var(--color-text);
  }

  .deck-card p {
    font-size: 1rem;
    color: var(--color-text-dim);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .deck-accent {
    width: 60px;
    height: 4px;
    margin-bottom: 2.5rem;
    border-radius: 2px;
    background: var(--color-primary);
  }

  .algonquin .deck-accent {
    background: hsl(150 80% 45%);
  }
  .saguenay .deck-accent {
    background: hsl(205 85% 52%);
  }
  .rdl .deck-accent {
    background: hsl(28 90% 55%);
  }

  .view-deck {
    font-size: 0.85rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--color-accent);
    opacity: 0.6;
    transition: var(--transition-smooth);
  }

  .deck-card:hover .view-deck {
    opacity: 1;
    color: var(--color-primary);
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }
</style>
